{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "module": "NodeNext",
        "lib": ["ESNext"],
        "target": "ESNext",
        "moduleResolution": "NodeNext",
        "strict": false,
        "sourceMap": true,
        "esModuleInterop": true,
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": ["src/**/*.ts"],
    "exclude": [
        "node_modules",
        "src/**/*.test.ts"
    ]
}